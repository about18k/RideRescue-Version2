<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="road_rescue.MakePaymentPage"
             Title="Make Payment"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header with Back Button and Title -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="Center" Padding="0,0,0,0">
                <ImageButton
                    Source="arrowleftsmall.png"
                    BackgroundColor="Transparent"
                    HeightRequest="20"
                    WidthRequest="20"
                    Clicked="OnBackButtonClicked"
                    VerticalOptions="Center" />

                <Label Text="Make Payment" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="Black"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Payment Info Card -->
            <Frame BackgroundColor="#f9f9f9"
                   CornerRadius="10"
                   BorderColor="#dcdcdc"
                   Padding="15"
                   HasShadow="False">
                <VerticalStackLayout Spacing="10">

                    <!-- Amount -->
                    <Label Text="Amount" FontSize="14" FontAttributes="Bold" TextColor="Gray"/>
                    <Label Text="â‚±1,200.00" FontSize="22" FontAttributes="Bold" TextColor="Black"/>

                    <!-- Recipient and Order -->
                    <Grid ColumnSpacing="10" RowSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Labels -->
                        <Label Text="Recipient" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" TextColor="Gray"/>
                        <Label Text="Payment for" Grid.Row="0" Grid.Column="1" FontAttributes="Bold" TextColor="Gray"/>

                        <!-- Values -->
                        <Label Text="Juan Dela Cruz" Grid.Row="1" Grid.Column="0" TextColor="Black"/>
                        <Label Text="Order #1234" Grid.Row="1" Grid.Column="1" TextColor="Black"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Payment Method Section -->
            <Label Text="Payment Method" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
            <HorizontalStackLayout Spacing="30" VerticalOptions="Center">

                <!-- GCash Option -->
                <Frame x:Name="GcashFrame"
           BorderColor="#cfd8dc"
           CornerRadius="8"
           Padding="0"
           HasShadow="False"
           BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGcashTapped"/>
                    </Frame.GestureRecognizers>
                    <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                        <Image Source="gcashlogo.png" WidthRequest="70" HeightRequest="70"/>
                    </HorizontalStackLayout>
                </Frame>

                <!-- Cash Option -->
                <Frame x:Name="CashFrame"
           BorderColor="#cfd8dc"
           CornerRadius="8"
           Padding="10"
           HasShadow="False"
           BackgroundColor="White">
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCashTapped"/>
                    </Frame.GestureRecognizers>
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image Source="cashlogo.png" WidthRequest="28" HeightRequest="28"/>
                        <Label Text="Cash" FontAttributes="Bold" FontSize="16" TextColor="Black"/>
                    </HorizontalStackLayout>
                </Frame>
            </HorizontalStackLayout>
            <Label Text="Upload a proof of payment or a receipt" FontSize="14" TextColor="Gray" HorizontalTextAlignment="Center" />

            <!-- Upload Box -->
            <Frame BackgroundColor="#f3f4f6"
                   BorderColor="#cfd8dc"
                   CornerRadius="10"
                   Padding="30"
                   HasShadow="False"
                   HorizontalOptions="FillAndExpand"
                   HeightRequest="160">
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Image Source="upload_icon.png" WidthRequest="40" HeightRequest="40"/>
                    <Label Text="Upload GCash Receipt" TextColor="Gray" FontAttributes="Bold"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Submit Button -->
            <Button Text="Submit"
                    BackgroundColor="#3070F6"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
