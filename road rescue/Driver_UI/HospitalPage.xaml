<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="road_rescue.HospitalPage"
             Title="Nearest Hospitals"
             Shell.TabBarIsVisible="False">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Fixed Header (Search Bar) -->
        <VerticalStackLayout Padding="10" Spacing="10" BackgroundColor="White" Grid.Row="0">
            <Label Text="Nearest Hospitals"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10" />
            <Border Stroke="Gray" StrokeThickness="1" Padding="0"
                    StrokeShape="RoundRectangle 100">
                <SearchBar Placeholder="Find hospitals near you.." 
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           HeightRequest="40"/>
            </Border>
        </VerticalStackLayout>


        <ScrollView Orientation="Horizontal" Grid.Row="1" Margin="0,10">
            <HorizontalStackLayout Spacing="6" Padding="5,0">
                <Button Text="ðŸ›  Repair" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="ðŸ›ž Vulcanize" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="â›½ Gas" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="ðŸš‘ Hospital" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="ðŸš¨ Rescue" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="ðŸ‘® Police" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
                <Button Text="ðŸ”¥ Fire" Clicked="OnChipClicked"
                        FontSize="12" Padding="10,5"
                        BackgroundColor="#f2f2f2" TextColor="Black"
                        BorderColor="Gray" BorderWidth="1"
                        CornerRadius="15" />
            </HorizontalStackLayout>
        </ScrollView>


        <!-- Scrollable Hospital List (below buttons) -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout Padding="10" Spacing="10">

                <!-- Hospital Card 1 -->
                <Border Margin="10" Padding="15" StrokeThickness="1" Stroke="#E0E0E0" BackgroundColor="#ffffff">
                    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*">

                        <Image Grid.RowSpan="2"
                               Source="hospital.png"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFill"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Margin="0,0,10,0">
                            <Image.Clip>
                                <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                            </Image.Clip>
                        </Image>

                        <Label Grid.Column="1"
                               Text="City General Hospital"
                               FontSize="18"
                               VerticalOptions="Start"
                               TextColor="Black"
                               FontAttributes="Bold"
                               LineBreakMode="WordWrap"
                               Margin="0,0,0,5"/>

                        <StackLayout Grid.Row="2" Grid.Column="0"
                                     Orientation="Vertical"
                                     VerticalOptions="End"
                                     HorizontalOptions="Start"
                                     Spacing="2">

                            <Label Text="123 Main St, Cityville"
                                   FontSize="14"
                                   TextColor="Gray"
                                   VerticalOptions="Center" />

                            <Label Text="Hotline: (123) 456-7890"
                                   FontSize="14"
                                   TextColor="#21499F"
                                   VerticalOptions="Center" />

                        </StackLayout>

                        <VerticalStackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="End" Spacing="10" Margin="0,15,0,0" WidthRequest="100">
                            <Button Text="Locate" Clicked="OnMoreInfoClicked"
                                    BackgroundColor="#21499F" TextColor="White"
                                    CornerRadius="20" HeightRequest="35" WidthRequest="100" Padding="0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Hospital Card 2 -->
                <Border Margin="10" Padding="15" StrokeThickness="1" Stroke="#E0E0E0" BackgroundColor="#ffffff">
                    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*">

                        <Image Grid.RowSpan="2"
                               Source="hospital.png"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFill"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Margin="0,0,10,0">
                            <Image.Clip>
                                <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                            </Image.Clip>
                        </Image>

                        <Label Grid.Column="1"
                               Text="Sunrise Emergency Center"
                               FontSize="18"
                               VerticalOptions="Start"
                               TextColor="Black"
                               FontAttributes="Bold"
                               LineBreakMode="WordWrap"
                               Margin="0,0,0,5"/>

                        <StackLayout Grid.Row="2" Grid.Column="0"
                                     Orientation="Vertical"
                                     VerticalOptions="End"
                                     HorizontalOptions="Start"
                                     Spacing="2">

                            <Label Text="456 Elm St, Townsville"
                                   FontSize="14"
                                   TextColor="Gray"
                                   VerticalOptions="Center" />

                            <Label Text="Hotline: (987) 654-3210"
                                   FontSize="14"
                                   TextColor="#21499F"
                                   VerticalOptions="Center" />

                        </StackLayout>

                        <VerticalStackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="End" Spacing="10" Margin="0,15,0,0" WidthRequest="100">
                            <Button Text="Locate" Clicked="OnMoreInfoClicked"
                                    BackgroundColor="#21499F" TextColor="White"
                                    CornerRadius="20" HeightRequest="35" WidthRequest="100" Padding="0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- Hospital Card 3 -->
                <Border Margin="10" Padding="15" StrokeThickness="1" Stroke="#E0E0E0" BackgroundColor="#ffffff">
                    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="Auto,*">

                        <Image Grid.RowSpan="2"
                               Source="hospital.png"
                               WidthRequest="60"
                               HeightRequest="60"
                               Aspect="AspectFill"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Margin="0,0,10,0">
                            <Image.Clip>
                                <EllipseGeometry Center="30,30" RadiusX="30" RadiusY="30"/>
                            </Image.Clip>
                        </Image>

                        <Label Grid.Column="1"
                               Text="Green Valley Clinic"
                               FontSize="18"
                               VerticalOptions="Start"
                               TextColor="Black"
                               FontAttributes="Bold"
                               LineBreakMode="WordWrap"
                               Margin="0,0,0,5"/>

                        <StackLayout Grid.Row="2" Grid.Column="0"
                                     Orientation="Vertical"
                                     VerticalOptions="End"
                                     HorizontalOptions="Start"
                                     Spacing="2">

                            <Label Text="789 Oak Ave, Villagetown"
                                   FontSize="14"
                                   TextColor="Gray"
                                   VerticalOptions="Center" />

                            <Label Text="Hotline: (555) 123-4567"
                                   FontSize="14"
                                   TextColor="#21499F"
                                   VerticalOptions="Center" />

                        </StackLayout>

                        <VerticalStackLayout Grid.Row="2" Grid.Column="1" HorizontalOptions="End" Spacing="10" Margin="0,15,0,0" WidthRequest="100">
                            <Button Text="Locate" Clicked="OnMoreInfoClicked"
                                    BackgroundColor="#21499F" TextColor="White"
                                    CornerRadius="20" HeightRequest="35" WidthRequest="100" Padding="0"/>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
