<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="road_rescue.Mechanic_UI.trackingP"
             Title="trackingP"
             BackgroundColor="Black"
             Shell.FlyoutBehavior="Disabled"
             >
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Back button and ID -->
            <HorizontalStackLayout>
                <Image Source="back_icon.png" WidthRequest="24" HeightRequest="24" />
                <Label Text="GCGKH92129" TextColor="White" FontSize="20" HorizontalOptions="CenterAndExpand" />
            </HorizontalStackLayout>

            <!-- Map placeholder -->
            <Frame BackgroundColor="#2A2A2A" CornerRadius="12" Padding="0">
                <Grid HeightRequest="200">
                    <Label Text="Map Placeholder" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White"/>
                </Grid>
            </Frame>

            <!-- Shipment Info -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Date: Monday, 29 Jan 2023" TextColor="White"/>
                <Label Text="Estimated: Friday, 18 Feb 2023" TextColor="White"/>
                <Label Text="From: Madrid, Spain" TextColor="White"/>
                <Label Text="Shipping to: Jember, Indonesia" TextColor="White"/>
                <Label Text="Item: Playstation 5 Limited Edition" TextColor="White"/>
                <Label Text="Customer: Edgar Carlost" TextColor="White"/>
            </VerticalStackLayout>

            <!-- Customer Service -->
            <Frame BackgroundColor="#1E1E1E" CornerRadius="10" Padding="10">
                <HorizontalStackLayout>
                    <Image Source="avatar_placeholder.png" WidthRequest="40" HeightRequest="40" />
                    <VerticalStackLayout Spacing="2" Margin="10,0,0,0">
                        <Label Text="Lina Punk Spanyol" TextColor="White" FontAttributes="Bold"/>
                        <Label Text="Customer Service" TextColor="Gray" FontSize="12"/>
                    </VerticalStackLayout>
                    <Image Source="call_icon.png" WidthRequest="30" HeightRequest="30" HorizontalOptions="EndAndExpand"/>
                </HorizontalStackLayout>
            </Frame>

            <!-- Status Bar -->
            <Grid ColumnDefinitions="*,*,*">
                <StackLayout HorizontalOptions="Center">
                    <Ellipse WidthRequest="10" HeightRequest="10" Fill="Blue"/>
                    <Label Text="Picked" TextColor="White" FontSize="10"/>
                </StackLayout>
                <StackLayout HorizontalOptions="Center">
                    <Ellipse WidthRequest="10" HeightRequest="10" Fill="Blue"/>
                    <Label Text="Delivery" TextColor="White" FontSize="10"/>
                </StackLayout>
                <StackLayout HorizontalOptions="Center">
                    <Ellipse WidthRequest="10" HeightRequest="10" Fill="Gray"/>
                    <Label Text="Delivered" TextColor="White" FontSize="10"/>
                </StackLayout>
            </Grid>

            <!-- Delivery Details -->
            <Frame BackgroundColor="White" CornerRadius="20">
                <VerticalStackLayout Padding="15" Spacing="10">
                    <Label Text="Delivery to cust" FontAttributes="Bold" FontSize="14" TextColor="Black"/>
                    <Label Text="Tegalgedhe, Jember, Indonesia" FontSize="12" TextColor="Black"/>
                    <Label Text="17 Feb 2023" FontSize="12" TextColor="Black"/>

                    <Button Text="Live Tracking" BackgroundColor="Black" TextColor="White" CornerRadius="20" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
        </ScrollView>
</ContentPage>